<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@android:drawable/ic_dialog_info"
                android:scaleType="centerInside"
                android:background="#E0E0E0"
                android:padding="40dp"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tvDetailTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:id="@+id/tvDetailDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“… Date"
            android:textSize="16sp"
            android:textColor="#424242"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:id="@+id/tvDetailVenue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“ Venue"
            android:textSize="16sp"
            android:textColor="#424242"
            android:layout_marginBottom="16dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:id="@+id/tvDetailDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event description"
            android:textSize="14sp"
            android:textColor="#616161"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">
            <TextView
                android:id="@+id/tvDetailCapacity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Capacity: 0/0"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#424242"/>
            <TextView
                android:id="@+id/tvDetailRewards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â­ 0 points"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FF9800"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnDetailRegister"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Register Now"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>
        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:backgroundTint="#757575"/>
    </LinearLayout>
</ScrollView>